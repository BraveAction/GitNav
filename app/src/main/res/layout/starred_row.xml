<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/starred_repo_author_icon"
        android:layout_width="40dp"
        android:layout_height="40dp" />

    <LinearLayout
        android:layout_toRightOf="@id/starred_repo_author_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="16dp">

        <TextView
            android:text="Title"
            android:textSize="16sp"
            android:id="@+id/starred_repo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/starred_repo_description"
            android:textSize="14sp"
            android:text="Description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_star_black_24dp"
                android:paddingTop="5dp"/>

            <TextView
                android:id="@+id/starred_repo_star_number"
                android:text="100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:textSize="14sp"
                android:paddingLeft="4dp"
                android:layout_toRightOf="@id/star"/>

            <ImageView
                android:id="@+id/starred_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_code_black_24dp"
                android:paddingTop="6dp"
                android:layout_toRightOf="@id/star"
                android:paddingLeft="60dp"/>

            <TextView
                android:id="@+id/starred_repo_language"
                android:text="Language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:paddingLeft="4dp"
                android:textSize="14sp"
                android:layout_toRightOf="@id/starred_code" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
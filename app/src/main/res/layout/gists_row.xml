<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/gists_row_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description"
                android:textSize="16sp"
                android:textColor="#000000"
                android:alpha="0.87"
                android:maxLines="1"/>

        </LinearLayout>

        <TextView
            android:id="@+id/gists_row_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#000000"
            android:alpha="0.54"
            android:maxLines="1"
            android:text="Id string"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="4dp">

            <ImageView
                android:id="@+id/gists_row_files"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_content_copy_black_24dp"
                android:paddingTop="1dp"/>

            <TextView
                android:id="@+id/gists_row_files_n"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/gists_row_files"
                android:paddingLeft="4dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:alpha="0.54"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/gists_row_public"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/gists_row_files_n"
                android:paddingLeft="16dp"
                android:textSize="14sp"
                android:textColor="#000000"
                android:alpha="0.54"
                android:maxLines="1"/>

            <TextView
                android:id="@+id/gists_row_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:text="Date"
                android:textSize="14sp"
                android:textColor="#000000"
                android:alpha="0.54"
                android:maxLines="1"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_schedule_black_24dp"
                android:layout_toLeftOf="@id/gists_row_date"
                android:paddingRight="4dp"
                android:paddingTop="3dp"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>